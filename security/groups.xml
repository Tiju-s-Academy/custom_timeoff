<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define a new module category -->
    <record id="timeoff_specific_fields_category" model="ir.module.category">
        <field name="name">Time Off Specific Fields</field>
        <field name="sequence">21</field>
        <field name="visible" eval="0"/> <!-- Hide the category if needed -->
    </record>

    <!-- Define the new group for field access -->
    <record id="group_read_specific_fields" model="res.groups">
        <field name="name">Read Specific Time Off Fields</field>
        <field name="category_id" ref="timeoff_specific_fields_category"/>
    </record>
</odoo>
